<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.text_field :password_confirmation %>
    <%= f.submit "Create my account", class: "bttn btn-primary"%>
    <% end %>
  </div>
</div>
