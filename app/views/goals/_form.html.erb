<%= form_for @goal do |f| %>

  <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@goal.errors.count, "error") %> prohibited this from being saved: </h2>
      <ul>
        <% @goal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :goal_amount %><br>
<%= f.text_field :goal_amount %>
</p>

<% if @goal.persisted? %>
  <p>
    <%= render "savings/form" %>
  </p>
<% end %>

<%= f.submit %>
<% end %>